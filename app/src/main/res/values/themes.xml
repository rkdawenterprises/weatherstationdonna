<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Weatherstationdonna" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_900</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lime_600</item>
        <item name="colorSecondaryVariant">@color/lime_900</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorOnError">@color/red_800</item>

        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@color/background_material_light</item>
    </style>
    
    <style name="Theme.Weatherstationdonna.Toolbar" parent="Widget.MaterialComponents.Toolbar"/>
</resources>
